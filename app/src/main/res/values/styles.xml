<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/space</item>
        <item name="android:paddingRight">@dimen/space</item>
        <item name="android:drawablePadding">@dimen/space_icon</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/space_text</item>
        <item name="android:textSize">@dimen/info_text_size</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppTheme.TopIcon">
        <item name="android:layout_marginRight">@dimen/space</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
